@{
    Layout = "_Layout";
}
@if (CurrentForm.CurrentFormPermissionActions.AddHasPermission)
{

    @model MainInfluenceDTO;

    <form id="frm" onsubmit="Submit()">

        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <a href="@Url.GetAction("Index")">
                    <div class="welcome-text">
                        <h4>@CurrentForm.Title   </h4>
                    </div>
                </a>
            </div>
            <div class="col-sm-6 p-md-0 ">
                <button class="btn btn-primary pull-left" id="btnSave" type="submit">حفظ</button>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <input type="hidden" asp-for="ID" />

                            <div class="col-lg-3 col-md-6">
                                <label>الاسم </label>
                                <input id="txtMainInfluenceText" asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name"></span>

                            </div>
                            <div class="col-lg-3 col-md-6">
                                <label>البنود الفرعية </label>
                                <select class="form-control select2" asp-items="@ViewBag.Questions" multiple="" id="QuestionsIds" asp-for="QuestionsIds"  ></select>
                                <span asp-validation-for="QuestionsIds"></span>

                            </div>

                        </div>












                    </div>
                </div>
            </div>
        </div>

    </form>
    @section Scripts
{

        <partial name="_Scripts" />
    }
}